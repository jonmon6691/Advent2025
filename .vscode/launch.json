{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Debug Tests",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "-s"
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "cwd": "${fileDirname}"
        },
        {
            "name": "Python: Debug Current Test Function",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "${file}::${selectedText}",
                "-v"
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "cwd": "${fileDirname}"
        },
        {
            "name": "Python: Debug All Day1 Tests",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "Day1/test_day1.py",
                "-v"
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "cwd": "${workspaceFolder}"
        }
    ]
}
